<view class="container">

  <view class="movie" bindtap="showMovie">
    <image class="movie-poster" src="{{ review.movie.poster }}"></image>
    <text class="movie-title">{{ review.movie.title }}</text>
  </view>

  <view class="review" bindtap="showReview">
    <image class="avatar" src="{{ review.avatar }}"/>
    <text>{{ review.username }}</text>
    <text>给你推荐了一部电影</text>
  </view>

  <view class="toolbar">
    <navigator class="button" url="/pages/hot/hot">
      <image class="icon" src="/images/like.png" width="30" height="30"/>
      <text>热门</text>
    </navigator>
    <navigator class="button" url="/pages/me/me">
      <image class="icon" src="/images/user.png"/>
      <text>我的</text>
    </navigator>
  </view>

</view>