.container {
  background: white;
  border: 1px solid #E1E9EE;
  border-radius: 8rpx;
  margin: 160rpx 30rpx 30rpx;
  padding: 180rpx 60rpx 60rpx 60rpx;
  color: #333;
  position: relative;
}

.poster {
  width: 200rpx;
  height: 294rpx;
  border-radius: 8rpx; 
  position: absolute;
  top: -120rpx;
  left: 245rpx;
}

.title {
  font-size: 36rpx;
  line-height: 50rpx;
  font-weight: bold;
  text-align: center;
  margin: 24rpx 0;
}

textarea {
  width: 100%;
  height: 200rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  margin-top: 24rpx;
}

.button-submit {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  position: absolute;
  color: white;
  background: #1296db;
  border-top: 1px solid #E1E9EE;
  bottom: 0;
  text-align: center;
  font-size: 36rpx;
}

.button-container {
  display: flex;
  justify-content: center;
}

.button {
  background: white;
  border: 1px solid #E1E9EE;
  border-radius: 8rpx;
  font-size: 32rpx;
  line-height: 50rpx;
  text-align: center;
  color: #1296db;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 36rpx;
}

.add-audio {
  width: 30%;
  margin-top: 40rpx;
}